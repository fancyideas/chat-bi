# 企业级环境配置文件模板
# 复制此文件为根目录的.env文件，并填写实际的值

# 应用配置
APP_ENV=production
APP_PORT=8000
APP_HOST=0.0.0.0

# 数据库配置
MYSQL_ROOT_PASSWORD=your-root-password-here
MYSQL_DATABASE=chat_bi
MYSQL_USER=chat_bi_user
MYSQL_PASSWORD=your-database-password-here
MYSQL_PORT=3306

# Redis配置
REDIS_PASSWORD=your-redis-password-here
REDIS_PORT=6379

# 数据库连接URL
DATABASE_URL=mysql+pymysql://chat_bi_user:your-database-password-here@mysql:3306/chat_bi?charset=utf8mb4

# Redis连接URL
REDIS_URL=redis://:your-redis-password-here@redis:6379/0

# LLM配置
OLLAMA_HOST=http://host.docker.internal:11434

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-key-here-change-in-production

# 性能配置
WORKERS=4
TIMEOUT=30

# 监控配置
ENABLE_MONITORING=false
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=

# 数据配置
DATASET_PATH=/app/dataset
CACHE_PATH=/app/cache

# 超时配置
DB_TIMEOUT=30
REDIS_TIMEOUT=10
LLM_TIMEOUT=60